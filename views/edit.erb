<section class="center-vertical">
    <h1><%= current_user.name %>の投稿編集フォーム</h1>
    <div>
      <form action="/posts/<%= @post.id %>" method="post">
        <input type="text" name="body" value="<%= @post.body %>" placeholder="あなたが熱量を注いでいるものはなんですか？"><br>
        <input type="string" name="tag_name" value="<%= @tag.tag_name %>" placeholder="タグを入力"><br>
        <input type="submit" value="投稿">
      </form>
    </div>
</section>